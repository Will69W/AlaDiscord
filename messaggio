from flask import Flask, request, jsonify
import sqlite3

app = Flask(__name__)

# Creiamo un database SQLite e una tabella, se non esistono ancora
conn = sqlite3.connect('database.db')
c = conn.cursor()
c.execute('CREATE TABLE IF NOT EXISTS messaggi (testo TEXT)')
conn.commit()
conn.close()

# Percorso per aggiungere messaggi al database
@app.route('/add_message', methods=['POST'])
def add_message():
    try:
        # Otteniamo i dati JSON dalla richiesta
        data = request.get_json()
        text = data.get('text')

        # Connettiamoci al database
        conn = sqlite3.connect('database.db')
        c = conn.cursor()

        # Inseriamo il messaggio nel database
        c.execute("INSERT INTO messaggi (testo) VALUES (?)", (text,))
        conn.commit()
        conn.close()

        return jsonify({'message': 'Messaggio aggiunto con successo al database'})
    except Exception as e:
        return jsonify({'error': str(e)})

# Percorso per ottenere tutti i messaggi dal database
@app.route('/get_messages', methods=['GET'])
def get_messages():
    try:
        # Connettiamoci al database
        conn = sqlite3.connect('database.db')
        c = conn.cursor()

        # Otteniamo tutti i messaggi dal database
        c.execute("SELECT * FROM messaggi")
        messages = c.fetchall()

        conn.close()

        return jsonify({'messages': messages})
    except Exception as e:
        return jsonify({'error': str(e)})

if __name__ == '__main__':
    app.run(debug=True, port=5000)
